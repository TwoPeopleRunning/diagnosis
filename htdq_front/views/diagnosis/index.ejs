    // 闭包, 点击按钮变换样式
    var hlClickButton = function () {
        var eleIdTmp = ""
        function hlClickButtonCls(element) {
            if (eleIdTmp != "") {
                $("#" + eleIdTmp).css("background-color", "")
            }
            eleIdTmp = element.id
            $("#" + eleIdTmp).css("background-color", "#ff9900")
        }
        return hlClickButtonCls
    }

    // treeview
    function fn(data, pid) {
        var result = [],
            temp;
        for (var i = 0; i < data.length; i++) {
            if (data[i].pid == pid) {
                if (data[i].isParent == false) {
                    var obj = {
                        "ID": data[i].ID,
                        "isParent": data[i].isParent,
                        "text": data[i].name,
                        "checked": true
                    };
                } else {
                    var obj = {
                        "isParent": data[i].isParent,
                        "text": data[i].name,
                        "checked": false
                    };
                }
                temp = fn(data, data[i].id);
                if (temp.length > 0) {
                    obj.items = temp;
                }
                result.push(obj);
            }
        }
        return result;
    }

    function checkedNodeIds(nodes, checkedNodes) {
        for (var i = 0; i < nodes.length; i++) {
            if (nodes[i].checked) {
                if (nodes[i].isParent == false) {
                    checkedNodes.push({
                        id: nodes[i].ID,
                        name: nodes[i].text
                    });
                }
            }
            if (nodes[i].hasChildren) {
                checkedNodeIds(nodes[i].children.view(), checkedNodes);
            }
        }
    }

    function onCheck() {
        var checked = []
        var treeView = $("#treeview").data("kendoTreeView")
        checkedNodeIds(treeView.dataSource.view(), checked)
