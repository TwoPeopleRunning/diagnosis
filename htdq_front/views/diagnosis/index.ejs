<!DOCTYPE html>
<html>

<head>
    <title>轴承诊断分析系统</title>
    <meta charset="utf-8">
    <link href="/content/shared/styles/examples-offline.css" rel="stylesheet">
    <link href="/styles/kendo.common.min.css" rel="stylesheet">
    <link href="/styles/kendo.rtl.min.css" rel="stylesheet">
    <link href="/styles/kendo.default.min.css" rel="stylesheet">
    <link href="/styles/kendo.default.mobile.min.css" rel="stylesheet">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jszip.min.js"></script>
    <script src="/js/kendo.all.min.js"></script>
    <script src="/content/shared/js/console.js"></script>
    <script>
        function stateChangeIE(_frame) {
            var loader = document.getElementById("LoadDiv");
            //loader.innerHTML = "加载中";
            loader.style.display = "none";
            _frame.style.display = "block";
            // _frame.style.display = "block"
        };
    </script>
</head>

<body>
    <a id="logo" href='/'></a>
    <div class="demo-section k-content wide">
        <div class="menu-botton">
            <div>
                <ul id="menu-images"></ul>
                <button type="button" id="imageButton1">概览</button>
                <button type="button" id="imageButton2">机床轴承配置</button>
                <button type="button" id="imageButton3">轴承故障诊断</button>
                <button type="button" id="imageButton4">诊断历史记录</button>
            </div>
        </div>
    </div>

    <!--container-->
    <div class="main">
        <!--内容-->
        <iframe id="iframeId" src="outline/running_eff" frameborder="0" scrolling="no" onload="stateChangeIE(this)" style="display: none"
            class="iframe">
        </iframe>
        <div id="LoadDiv" align="center">
            <img src="/images/loading.gif" style="height:100px;width:100px;margin-top:15%">
            <p>加载中...</p>
        </div>
    </div>
    <div class="<resp></resp>onsive-message"></div>
</body>
<script>
    setTimeout(function () {
        iframe = document.getElementById('iframeId');
        if (iframe.style.display == "none") {
            document.getElementById("LoadDiv").style.display = 'none';
            alert('加载失败，请退出后重新登录');
            window.stop();
        }
    }, 120000)


    $(document).ready(function () {
        $("#imageButton1").kendoButton({
            imageUrl: "/content/shared/icons/new/outline.png",
        });
        $("#imageButton2").kendoButton({
            imageUrl: "/content/shared/icons/new/display.png",
        });
        $("#imageButton3").kendoButton({
            imageUrl: "/content/shared/icons/new/energy.png",
        });
        $("#imageButton4").kendoButton({
            imageUrl: "/content/shared/icons/new/meta.png",
        });

        $("#imageButton1").click(function () {
            $("#iframeId").attr('src', 'http://www.baidu.com')
        })
    });
</script>
<style>
    body {
        height: 100%;
        width: 100%;
    }

    #logo {
        position: fixed;
        height: 50px;
        width: 300px;
        left: 20px;
        top: 30px;
        z-index: 9;
        background: url('/images/logo_rb.png') no-repeat center 0;
        background-size: 100%;
    }

    .demo-section {
        position: fixed;
        height: 44px;
        width: 100%;
        z-index: 8;
    }

    .menu-botton {
        margin-left: 450px;
        margin-top: 5px
    }

    .demo-section .k-button {
        margin-right: 20px;
    }

    .k-button .k-image {
        height: 16px;
    }

    #trtitle {
        background-color: gray;
        margin: 2em auto 1em;
    }

    .sidebar {
        width: 15%;
        float: left;
        padding-top: 150px;
        margin-left: 2em;
        margin-right: 20px;
        border-right: 1px solid #ccc;
        min-height: 640px;
    }

    .main {
        height: 800px;
        border: 1px solid black;
    }

    .k-textbox {
        width: 80px;
    }

    #iframeId {
        position: relative;
        width: 100%;
        height: 100%;
        top: 118px;
        overflow: hidden;
        /* padding-top: 160px; */
    }

    html {
        overflow-x: hidden;
        overflow-y: auto;
    }
</style>

