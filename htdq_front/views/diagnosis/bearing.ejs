                    <input type="text" value="0.92" disabled>
                </td>
                <td>
                    <p>滚珠故障</p>
                    <input type="text" value="0.92" disabled>
                </td>
            </tr>
        </table>
    </div>

</body>
<script>
    $('.edit-table button').kendoButton();
    // console.log($('.edit-table button')[0]);

    //编辑按钮
    $('.edit-table button')[0].onclick = function () {
        $('form input')[1].disabled = false
        $('form input')[1].focus()
        $('form input')[2].disabled = false
    }
    //删除按钮
    $('.edit-table button')[1].onclick = function () {
        remove = confirm('确定要删除该轴承么？')
        if (remove) {
            $('#showBearing').remove()
        }
    }
    //保存按钮
    $('.edit-table button')[2].onclick = function () {
        var payload = {
            'serialNumber': $('form input')[0].value,
            'kind': $('form input')[1].value,
            'position': $('form input')[2].value
        }
        console.log(payload)
    }




</script>
