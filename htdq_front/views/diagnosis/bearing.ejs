                <tr>
                    <td>
                        <p>轴承类型：</p>
                    </td>
                    <td>
                        <input type="text" name="" id="" value="滚珠轴承" disabled>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>轴承位置：</p>
                    </td>
                    <td>
                        <input type="text" name="" id="" value="主轴轴承" disabled>
                    </td>
                </tr>

            </table>
        </form>
        <table id='edit-table' class="edit-table">
            <tr>
                <td>
