</div>
</div>
</div>
</div>   

<style>
    #tabstrip h2 {
        font-weight: lighter;
        font-size: 5em;
        line-height: 1;
        padding: 0 0 0 30px;
        margin: 0;
    }

    #tabstrip h2 span {
        background: none;
        padding-left: 2px;
        font-size: .2em;
        vertical-align: top;
    }

    #tabstrip p {

        text-align: center;
    }
</style>


<script>
    $(document).ready(function() {
        $("#tabstrip").kendoTabStrip({
            animation:  {
                open: {
                    effects: "fadeIn"
                }
            }
        });
    });
    var dataSource1 = new kendo.data.DataSource({
        offlineStorage: "<%=name %>"+"offline-kendo-demo1",
        batch: true,
        pageSize: 10,
        schema: {
            model: {
                id: "toolformula",
                fields: {
                    symbol1: { type: "text" },
                    name1: { type: "text"},
                    color1: { type: "text"},
                    content1: { type: "text"},
                    neg_name1: { type: "text"},
                    neg_color1: { type: "text"},
                    discribe1: { type: "text"},
                    // UnitsInStock: { type: "number", validation: { min: 0, required: true } }
                }
            }
        }
    });
    var dataSource2 = new kendo.data.DataSource({
        offlineStorage: "<%=name %>"+"toolformula_usr",
        batch: true,
        pageSize: 10,
        schema: {
            model: {
                id: "toolid_usr",
                fields: {
                    symbol2: { type: "text" },
                    name2: { type: "text"},
                    color2: { type: "text"},
                    content2: { type: "text"},
                    neg_name2: { type: "text"},
                    neg_color2: { type: "text"},
                    discribe2: { type: "text"},
                    // UnitsInStock: { type: "number", validation: { min: 0, required: true } }
                }
            }
        }
    });
            dataSource1.online(false);
            dataSource2.online(false);
    $("#grid1").kendoGrid({
        dataSource: dataSource1,
        pageable: {
            refresh: true
        },
        height: 600,
        toolbar: [ "create" ],
        columns: [
        "symbol1",
        "name1",
        "color1",
        "content1",
        "neg_name1",
        "neg_color1",
        "discribe1",
        { command: ["edit", "destroy"], title: "&nbsp;", width: "250px" }
        ],
        editable: "inline"
    });
    $("#grid2").kendoGrid({
        dataSource: dataSource2,
        pageable: {
            refresh: true
        },
        height: 600,
        toolbar: [ "create" ],
        columns: [
        "symbol2",
        "name2",
        "color2",
        "content2",
        "neg_name2",
        "neg_color2",
        "discribe2",
        { command: ["edit", "destroy"], title: "&nbsp;", width: "250px" }
        ],
        editable: "inline"
    });
</script>
</body>

</html>