<!DOCTYPE html>
<html>

<head>
    <title></title>
    <meta charset="utf-8">
    <link href="/content/shared/styles/examples-offline.css" rel="stylesheet">
    <link href="/styles/kendo.common.min.css" rel="stylesheet">
    <link href="/styles/kendo.rtl.min.css" rel="stylesheet">
    <link href="/styles/kendo.default.min.css" rel="stylesheet">
    <link href="/styles/kendo.default.mobile.min.css" rel="stylesheet">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jszip.min.js"></script>
    <script src="/js/kendo.all.min.js"></script>
    <script src="/content/shared/js/console.js"></script>

</head>
<body>
<div id="framebody">
    <form id="form">
    <table align="center">
        <tr>
            <td><pre>车间名称：</pre></td>
            <td><input disabled="true" type="text" class="k-textbox" name="NAME" id="NAME" style="width: 300px;" value="<%= NAME%>"></td>
        </tr>
        <tr>
            <td style="vertical-align:top;"><pre>备       注：</pre></td>
            <td><textarea id="NOTE" type="text" style="border-radius:5px;width: 294px;height: 100px;" name="NOTE" form="form"></textarea></td>
        </tr>       
    </table>
    </form>
    <br />
    <p style="text-align: center">
        <a><button class="k-button" id="save">保存</button></a>
        <a><button class="k-button" id="del">删除</button></a>
    </p>
    
</div>
<style>
</style>


<script>
$(document).ready(function() {
    $("#NOTE").text("<%= NOTE %>");
    $("#save").click(function () {
        // alert($("#name").val());
        var url = "/api/MDC_MTGROUP/Update?NAME=" + $("#NAME").val();
        // console.log($("#form").serialize());
        var payload = {
            "NAME": $("#NAME").val(),
            "NOTE": $("#NOTE").val()

        };
        $.post(url, payload, function(data){
            if(data.error) {
                alert(data);
                window.location.reload();
            } else {
                alert("保存成功！" + "\n" + JSON.stringify(data, null, 4));
            }
        }).error(function(){
            alert("保存错误！");
            window.location.reload();
        });
    });
    $("#del").click(function () {
        var url = "/api/MDC_MTGROUP/Destroy";
        $.post(url, {"NAME": $("#NAME").val()}, function(data){
            if(data.error) {
                alert(data);
                window.location.reload();
            } else {
                alert("删除成功！" + "\n" + JSON.stringify(data, null, 4));
                parent.window.location.reload();
            }
        }).error(function(){
            alert("删除错误！");
            window.location.reload();
        });
    });
});
</script>
<style type="text/css">
    framebody {
        height: 600px;
        width: 700px;
    }
    td {
        margin-right: 20px;
        margin-left: 20px;
    }
    pre {
        font-family: 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
        font-size: 15px;
        text-align: center;
    }
</style>
</body>

</html>